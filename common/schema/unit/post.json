{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "#/contactcenter-api/common/schema/unit/post.json",
    "title": "post",
    "type": "object",
    "description": "post",
    "required": [
        "unit_name",
        "unit_code",
        "unit_leader",
        "unit_basis",
        "status"
    ],
    "properties": {
        "unit_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "unit_code": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "unit_leader": {
            "type": "string",
            "maxLength": 100
        },
        "unit_basis": {
            "type": "boolean",
            "default": false
        },
        "status": {
            "type": "boolean",
            "default": false
        }
    }
}